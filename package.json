{
  "name": "crx-starter",
  "displayName": "crx-starter",
  "version": "0.0.0",
  "author": "no one",
  "description": "Quickly create a chrome extension with vue3 and vite",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "vue",
    "vite",
    "create-chrome-ext"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{vue,ts,json,css,scss,md}'",
    "zip": "npm run build && node script/zip.js"
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.19",
    "@types/chrome": "^0.0.246",
    "@types/vue": "^2.0.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "gulp": "^4.0.2",
    "gulp-zip": "^5.0.2",
    "less": "^4.2.1",
    "prettier": "^3.0.3",
    "typescript": "5.2.2",
    "vite": "^4.4.11",
    "vue-tsc": "1.8.18"
  }
}
